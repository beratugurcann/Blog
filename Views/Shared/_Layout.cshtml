<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog Platformu</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <div class="nav-brand">
                    <a asp-controller="Home" asp-action="Index">Blog Platformu</a>
                </div>
                <ul class="nav-menu">
                    <li><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                    <li><a asp-controller="Home" asp-action="About">Hakkında</a></li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li><a asp-controller="Dashboard" asp-action="Index">Yönetim Paneli</a></li>
                        <li><span class="user-name">@User.Identity.Name</span></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                                <button type="submit">Çıkış</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Login">Giriş Yap</a></li>
                        <li><a asp-controller="Account" asp-action="Register" class="btn-register">Üye Ol</a></li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2025 Blog Platformu - Tüm hakları saklıdır.</p>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

