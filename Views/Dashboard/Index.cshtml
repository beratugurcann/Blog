@model List<BlogPost>
@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="dashboard-header">
    <h1>Yönetim Paneli</h1>
    <div class="dashboard-actions">
        <a asp-controller="Dashboard" asp-action="Create" class="btn btn-primary">Yeni Yazı Ekle</a>
        <a asp-controller="Dashboard" asp-action="Comments" class="btn btn-secondary">Yorumları Yönet</a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="dashboard-table-container">
        <table class="dashboard-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Başlık</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Güncellenme Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <td>@post.Id</td>
                        <td>@post.Title</td>
                        <td>@post.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@(post.UpdatedDate?.ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                        <td class="action-buttons">
                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm btn-info">Görüntüle</a>
                            <a asp-controller="Dashboard" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-controller="Dashboard" asp-action="Delete" asp-route-id="@post.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <p>Henüz blog yazısı bulunmamaktadır. İlk yazınızı ekleyin!</p>
    </div>
}

